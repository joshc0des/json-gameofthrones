<Window x:Class="JSON_P_GameOfThronesQuote.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSON_P_GameOfThronesQuote"
        mc:Ignorable="d"
        Title="Game of Thrones Quotes" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="txtBoxQuote" HorizontalAlignment="Left" Margin="489,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="301" Height="116"/>
        <Button x:Name="genQuoteBTN" Content="Generate New Quote" HorizontalAlignment="Left" Margin="249,92,0,0" VerticalAlignment="Top" Height="60" Width="181" FontSize="14" FontWeight="Bold" Click="genQuoteBTN_Click"/>
        <ListBox x:Name="listBoxData" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,222,0,0"/>
        <Button Content="Export Data" HorizontalAlignment="Left" Margin="29,102,0,0" VerticalAlignment="Top" Height="30" Width="85" Click="Button_Click"/>

    </Grid>
</Window>
